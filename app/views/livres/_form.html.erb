
<%= simple_form_for(@livre) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titre %>
    <%= f.input :auteur %>
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :prix %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
